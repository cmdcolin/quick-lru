{
	"include": ["src"],
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2020",
		"lib": ["dom", "esnext"],
		"skipLibCheck": true,
		"declaration": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"rewriteRelativeImportExtensions": true,
		"esModuleInterop": true
	}
}
